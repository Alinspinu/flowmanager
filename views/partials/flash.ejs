<%if(success && success.length) {%>
<div class="row">
    <div class="col-lg-6 offset-lg-3">
    <div class="my-2 flash-success alert alert-dismissible fade show" role = "alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>   
    </div>
    </div>
</div>
<% } %> 

<%if(error && error.length) {%>
<div class="row">
    <div class="col-lg-6 offset-lg-3">
    <div class="my-2 flash-error alert alert-dismissible fade show" role = "alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>   
    </div>
    </div>
</div>
    <% } %> 